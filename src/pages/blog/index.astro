---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.localeCompare(a.data.date)
);
---

<BaseLayout title="Blog">
  <div class="max-w-3xl">
    <h1 class="text-3xl font-bold mb-2">Blog</h1>
    <p class="text-gray-500 mb-10">Longer-form writing.</p>

    <div class="space-y-5">
      {posts.map((post) => (
        <a href={`/blog/${post.id}/`} class="group block bg-white rounded-xl border border-gray-200 p-6 hover:shadow-md hover:border-accent-200 transition-all no-underline">
          <h2 class="font-semibold text-lg text-gray-900 group-hover:text-accent-600 transition-colors mb-1">
            {post.data.title}
          </h2>
          <time class="text-sm text-gray-400 font-mono">{post.data.date}</time>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
