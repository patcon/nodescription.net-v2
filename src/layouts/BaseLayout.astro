---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  wide?: boolean;
}

const { title, wide = false } = Astro.props;
const siteTitle = 'nodescription.net';
const pageTitle = title ? `${title} â€” ${siteTitle}` : siteTitle;
const containerClass = wide ? 'max-w-5xl' : 'max-w-4xl';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="The personal website of Patrick Connolly." />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-5xl mx-auto px-6 py-4">
        <Nav />
      </div>
    </header>
    <main class={`flex-1 ${containerClass} mx-auto px-6 py-12 w-full`}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
